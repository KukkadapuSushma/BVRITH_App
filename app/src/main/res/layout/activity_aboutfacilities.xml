<?xml version="1.0" encoding="utf-8"?>
<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"

        tools:context="com.bvrit.bvritcalllog.aboutfacilities">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:text="FACILITIES"
            android:textAlignment="center"
            android:textColor="#8a2a7f"
            android:textSize="35dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/Button07"
            android:layout_width="160dip"
            android:layout_height="160dip"
            android:layout_marginTop="40dip"
            android:backgroundTint="@color/colorPrimary"
            android:shadowColor="@color/colorPrimaryLight"
            android:text="TRANSPORT"
            android:textSize="20dp"
            android:textStyle="bold"></Button>

        <Button
            android:id="@+id/Button09"
            android:layout_width="160dip"
            android:layout_height="160dip"
            android:layout_alignLeft="@+id/Button07"
            android:layout_below="@+id/Button07"
            android:backgroundTint="@color/colorPrimary"
            android:text="CANTEEN"
            android:textSize="20dp"
            android:textStyle="bold"></Button>

        <Button
            android:id="@+id/Button011"
            android:layout_width="160dip"
            android:layout_height="160dip"
            android:layout_alignLeft="@+id/Button09"
            android:layout_below="@+id/Button09"
            android:backgroundTint="@color/colorPrimary"
            android:text="HOSTELS"
            android:textSize="20dp"
            android:textStyle="bold"></Button>

        <Button
            android:id="@+id/Button010"
            android:layout_width="160dip"
            android:layout_height="160dip"
            android:layout_below="@+id/Button07"
            android:layout_toRightOf="@+id/Button09"
            android:backgroundTint="@color/colorPrimary"
            android:text="WISE"
            android:textSize="20dp"
            android:textStyle="bold"></Button>

        <Button
            android:id="@+id/Button012"
            android:layout_width="160dip"
            android:layout_height="160dip"
            android:layout_below="@+id/Button010"
            android:layout_toRightOf="@+id/Button011"
            android:backgroundTint="@color/colorPrimary"
            android:text="ATL"
            android:textSize="20dp"
            android:textStyle="bold"></Button>

        <Button
            android:id="@+id/Button08"
            android:layout_width="160dip"
            android:layout_height="160dip"
            android:layout_alignTop="@+id/Button07"
            android:layout_toRightOf="@+id/Button07"
            android:backgroundTint="@color/colorPrimary"
            android:text="INCUBATION CENTER"
            android:textSize="20dp"
            android:textStyle="bold"></Button>


    </RelativeLayout>
</ViewFlipper>