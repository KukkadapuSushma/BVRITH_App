<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bvrit.bvritcall.mission"
    android:background="@drawable/bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="MISSION"
        android:id="@+id/textView29"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#295c7b"
        android:textSize="35dp"
        android:textIsSelectable="true"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="205dp"
        android:id="@+id/imageView12"
        android:src="@drawable/bsh4"
        android:layout_marginTop="15dp"
        android:scaleType="fitXY"
        android:layout_below="@+id/textView29"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="      To equip the students with necessary skills required to meet the demands of the global professional world and to face future challenges in an effective manner.  "
        android:id="@+id/textView30"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/imageView12"
        android:textAlignment="gravity"
        android:textSize="18dp"
        android:textIsSelectable="true"
        android:textStyle="normal"
        android:textColor="#09223b"
        android:layout_alignParentBottom="true"
         />
</RelativeLayout>
