<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.bvrit.bvritcalllog.principal"
        android:background="@drawable/bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="PRINCIPAL"
            android:id="@+id/textView17"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="#295c7b"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textIsSelectable="true"

            android:textSize="35dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/imageView7"
            android:src="@drawable/principal"
            android:layout_below="@+id/textView17"

            android:scaleType="fitXY"
            android:layout_alignRight="@+id/textView19"
            android:layout_alignEnd="@+id/textView19"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="                      Dr. K. V. N. Sunitha, a dynamic administrator and good visionary, is leading BVRIT Hyderabad as the principal. She has 22 years of teaching experiance. She did her B.Tech ECE, M.Tech CSE Dept in G. Narayanamma Institute of Technology and Science from the inception of the CSE Dept(2001 to July 2012). She received &quot;Academic Excellence Award&quot; by the management ofG. Narayanamma Institute of Technology &amp; Science on 18th September, 2005. She also received &quot;Best Computer Science Engineering Teacher Award on 18th September, 2005. She also received &quot;Best Computer Science Engineering Teacher Award for the year 2007&quot; by Indian Society for Technical Education ISTE in Feb 2008. She has authored five text books. She has guided two Ph.Ds and currently she is guiding 13 research scholars. She is the recipient of Best Faculty Award 2013, by Education Expo TV Academic Brilliance."
            android:id="@+id/textView19"
            android:layout_below="@+id/imageView7"
            android:textStyle="normal"
            android:textSize="18dp"
            android:layout_marginTop="15dp"
            android:textColor="#09223b"
            android:textIsSelectable="true" />
    </RelativeLayout>
